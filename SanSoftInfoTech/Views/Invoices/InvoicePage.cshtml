@model SanSoftInfoTech.Models.Invoice

@{
ViewData["Title"] = "InvoicePage";
}

<h1 class="text-center mb-4">Cristal Report</h1>
<div class="card mb-4">
    <div class="card-header">
        <h4 class="mb-0">Invoice</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Invoice Date:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.InvoiceDate)</dd>
            <dt class="col-sm-3 font-weight-bold">Due Date:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DueDate)</dd>
            <dt class="col-sm-3 font-weight-bold">Customer Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustomerName)</dd>
            <dt class="col-sm-3 font-weight-bold">Customer Address:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustomerAddress)</dd>
            <dt class="col-sm-3 font-weight-bold">Customer Email:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustomerEmail)</dd>
            <dt class="col-sm-3 font-weight-bold">Customer Phone:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustomerPhone)</dd>
            <dt class="col-sm-3 font-weight-bold">Subtotal:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Subtotal)</dd>
            <dt class="col-sm-3 font-weight-bold">Taxes:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Taxes)</dd>
            <dt class="col-sm-3 font-weight-bold">Total:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Total)</dd>
            <dt class="col-sm-3 font-weight-bold">Status:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
        </dl>
        <div id="LineItemsDivId">
            @if(Model.LineItems != null)
            {
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.LineItems)
                        {
                            <tr>
                                <td>@item.Description</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.TotalPrice</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
<div class="text-center">
    <a class="btn btn-primary" asp-action="Profile" asp-controller="Profiles">Back to List</a>
</div> 